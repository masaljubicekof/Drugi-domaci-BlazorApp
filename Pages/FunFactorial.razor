@code {
    private int num = 0;
    private long result = 1;
    private bool calculated = false;
    private int progress = 0;
    private List<string> steps = new();
    private Random rnd = new();

    private async Task CalculateFactorial()
    {
        steps.Clear();
        result = 1;
        calculated = false;
        progress = 0;

        if (num < 0)
        {
            steps.Add("âŒ Error: number must not be negative!");
            result = long.MinValue;
            return;
        }

        if (num == 0)
        {
            steps.Add("0! = 1 ðŸŽ‰");
            result = 1;
            calculated = true;
            progress = 100;
            return;
        }

        string[] emojis = { "ðŸš€", "ðŸŽ¯", "âš¡", "ðŸ”¥", "ðŸŽ²", "ðŸŒŸ", "ðŸ€" };

        for (int i = 1; i <= num; i++)
        {
            result *= i;
            string emoji = emojis[rnd.Next(emojis.Length)];
            steps.Add($"{i}! = {result} {emoji}");

            progress = (int)((i / (double)num) * 100);
            StateHasChanged();
            await Task.Delay(250); // animation delay
        }

        calculated = true;
        progress = 100;
    }
}
