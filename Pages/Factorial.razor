@page "/factorial"

<h3>Factorial Calculator</h3>

<input type="number" @bind="Number" min="0" />
<button @onclick="CalculateFactorial">Calculate</button>

<p>Factorial: @Result</p>

@code {
    private int Number { get; set; } = 1;
    private long Result { get; set; } = 1;

    private void CalculateFactorial()
    {
        int n = Number;
        long factorial = 1;
        
        if (n == 0 || n == 1)
        {
            Result = 1;
            return;
        }

        int i = 1;
        do
        {
            factorial *= i;
            i++;
        } while (i <= n);

        Result = factorial;
    }
}
